<%= render "include/top-nav" %>
    <div class="container" style="padding-top: 50px;">
        <div class="card">
            <div class="card-header">List officer</div>
            <div class="card-body">
                <%= link_to 'Add officer'.html_safe, new_officer_path, class: 'btn btn-primary'%>
                <table class="table table-striped table-hover">
                <thead>
                    <tr>
                    <th scope="col">#</th>
                    <th scope="col">Officer name</th>
                    <th scope="col">Officer address</th>
                    <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                <% @officer.each do |officers| %>
                    <tr>
                      <th scope="row">1</th>
                      <td><%= officers.officer_name %></td>
                      <td><%= officers.officer_address %></td>
                      <td>
                        <%= link_to '<i class="fa fa-eye"></i>'.html_safe, officer_path(officers), class: 'btn btn-secondary'%>
                      </td>
                    </tr>
                    <% end %>
                </tbody>
                </table>
            </div>
        </div>
    </div>
<%= render "include/bottom-nav" %>
