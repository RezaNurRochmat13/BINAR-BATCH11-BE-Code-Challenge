<%= render "include/top-nav" %>
    <div class="container" style="padding-top: 50px;">
        <div class="card">
            <div class="card-header">List members</div>
            <div class="card-body">
                <%= link_to 'Add member'.html_safe, new_member_path, class: 'btn btn-primary'%>
                <table class="table table-striped table-hover">
                <thead>
                    <tr>
                    <th scope="col">#</th>
                    <th scope="col">Member name</th>
                    <th scope="col">member address</th>
                    <th scope="col">Member phone</th>
                    <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                <% @allMembers.each do |member| %>
                    <tr>
                    <th scope="row">1</th>
                    <td><%= member.member_name %></td>
                    <td><%= member.member_address%></td>
                    <td><%= member.member_phone%></td>
                    <td>
                      
                      <%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_member_path(member), class: 'btn btn-info'%>
                      <%= link_to '<i class="fa fa-eye"></i>'.html_safe, member_path(member), class: 'btn btn-secondary'%>
                      <%= link_to '<i class="fa fa-trash"></i>'.html_safe, member_path(member),
                            method: :delete, class: 'btn btn-danger',
                            data: { confirm: 'Are you sure?' } %> 
                    </td>
                    </tr>
                    <% end %>
                </tbody>
                </table>
            </div>
        </div>
    </div>
<%= render "include/bottom-nav" %>