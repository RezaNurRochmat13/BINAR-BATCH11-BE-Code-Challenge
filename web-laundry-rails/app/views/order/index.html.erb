<%= render "include/top-nav" %>
    <div class="container" style="padding-top: 50px;">
        <div class="card">
            <div class="card-header">List officer</div>
            <div class="card-body">
                <%= link_to 'Add order'.html_safe, new_order_path, class: 'btn btn-primary'%>
                <table class="table table-striped table-hover">
                <thead>
                    <tr>
                    <th scope="col">#</th>
                    <th scope="col">Member name</th>
                    <th scope="col">Date order</th>
                    <th scope="col">Date finish order</th>
                    </tr>
                </thead>
                <tbody>
                <% @orders.each do |order| %>
                    <tr>
                      <th scope="row">1</th>
                      <td><%= order.member_name %></td>
                      <td><%= order.order_date_start %></td>
                      <td><%= order.order_date_end %></td>
                    </tr>
                    <% end %>
                </tbody>
                </table>
            </div>
        </div>
    </div>
<%= render "include/bottom-nav" %>
